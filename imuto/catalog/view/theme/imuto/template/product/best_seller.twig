{{ header }}
<div id="product-best-seller" class="container-fluid content-container" style="margin-top: 0;">
  <div class="row page-banner">
    {% if lang == en %}
    <img src="/catalog/view/theme/imuto/image/best-sellers.jpg" class="img-responsive img-width-full">
    {% else %}
    <img src="/catalog/view/theme/imuto/image/(best-seller)_jp.jpg" class="img-responsive img-width-full">
    {% endif %}
  </div>
  <div class="row product-content">
    <div class="container">
      {% if products %}
        <div class="row">
          {% for product in products %}
            <div class="product-layout product-grid col-lg-4 col-md-4 col-sm-6 col-xs-12" style="margin-bottom: 20px">
              <div class="product-thumb">
                <div class="serial-num">
                  <span class="num-text">#{{ product.serial_num }}</span>
                </div>
                <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
                <div>
                  <div class="caption">
                    <h4 class="product-name"><a href="{{ product.href }}">{{ product.model }}</a></h4>
                    <p>{{ product.summary }}</p>
                    <div class="price">
                      {% if product.price %}
                        {% if not product.special %}
                          <span class="price-new">{{ product.price }}</span>
                        {% else %}
                          <span class="price-new">{{ product.special }}</span>
                        {% endif %}
                      {% endif %}
                    </div>
                    {% if product.rating %}
                      <div>
                        <div class="col-xs-12 col-sm-6">
                          <div class="row">
                            <div class="rating">
                              {% for i in 1..5 %}
                                {% if product.rating > i - 1 and product.rating < i %}
                                  <span class="icon-star star-half-selected"></span>
                                {% elseif product.rating < i %}
                                  <span class="icon-star star-normal"></span>
                                {% else %}
                                  <span class="icon-star star-selected"></span>
                                {% endif %}
                              {% endfor %}
                            </div>
                          </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                          <div class="row rating-count">
                            <a href="javascript:;" lass="cart-btn-container dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <span class="fa fa-caret-down font20" style="padding: 0 10px;"></span>
                              <span class="count-number font16">{{ product.all_star_review_count }}</span>
                            </a>
                            {% if product.four_star_count %}
                            <ul class="dropdown-menu star-count-dropdown-menu" aria-labelledby="dropdownRatingMenu2">
                              <li><span class="star-text">5 star：</span><span class="star-num">{{ product.five_star_count }}</span></li>
                              <li><span class="star-text">{{ text_four_star }}：</span><span class="star-num">{{ product.four_star_count }}</span></li>
                            </ul>
                            {% endif %}
                          </div>
                        </div>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="row">
          <div class="col-sm-12 text-center">{{ pagination }}</div>
        </div>
      {% else %}
        <p class="font-bold font16 text-center">{{ text_no_product }}</p>
      {% endif %}
    </div>
  </div>
</div>
{{ footer }}