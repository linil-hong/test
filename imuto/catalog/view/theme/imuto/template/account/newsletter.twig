{{ header }}
<div id="account-newsletter" class="container content-container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li class="font14"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    <div id="content" class="col-xs-12 col-sm-9">
      <h1>{{ heading_title }}</h1>
      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
        <fieldset>
          <div class="form-group">
            <label class="col-xs-12 col-sm-2 control-label">{{ entry_newsletter }}</label>
            <div class="col-xs-12 col-sm-10">
              {% if newsletter %}
              <label class="radio-inline">
                <input type="radio" name="newsletter" class="newsletter-radio" value="1" checked="checked" />
                {{ text_yes }} </label>
              <label class="radio-inline">
                <input type="radio" name="newsletter" class="newsletter-radio" value="0" />
                {{ text_no }}</label>
              {% else %}
              <label class="radio-inline">
                <input type="radio" name="newsletter" class="newsletter-radio" value="1" />
                {{ text_yes }} </label>
              <label class="radio-inline">
                <input type="radio" name="newsletter" class="newsletter-radio" value="0" checked="checked" />
                {{ text_no }}</label>
              {% endif %}
            </div>
          </div>
        </fieldset>
        <div class="buttons clearfix">
          <a href="{{ back }}" class="btn btn-purple">{{ button_back }}</a>
          <input type="submit" value="{{ button_continue }}" class="btn btn-purple" />
        </div>
      </form>
    </div>
    <div class="col-sm-3 hidden-xs">
      {{ account_right }}
    </div>
  </div>
</div>
<script type="text/javascript"><!--
  $('.newsletter-radio').iCheck({
    radioClass: 'iradio_square-purple',
    increaseArea: '20%' // optional
  });
  //--></script>
{{ footer }}